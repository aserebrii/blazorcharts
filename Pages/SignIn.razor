@page "/SignIn"

<div class = "container ">

<h1>Sign In Page</h1>
<EditForm Model="@_loginmodel" OnInvalidSubmit="HandleValidSubmit" class = "col-sm-3 justify-content-center">
    <DataAnnotationsValidator />
    <!--<ValidationSummary />-->
    <div class="form-group">
        <label for="Username">Username</label>
        <InputText id="Username" @bind-Value="_loginmodel.Username" class="form-control" placeholder="JIRA Username"/>
        <ValidationMessage For="@(() => _loginmodel.Username)" />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <InputText id="Password" @bind-Value="_loginmodel.Password" type="password" class="form-control" placeholder="JIRA Password"/>
        <ValidationMessage For="@(() => _loginmodel.Password)" />
    </div>
    <button type="submit" class="btn btn-success">Sign In</button>
</EditForm>
</div>
@code{
    private LoginModel _loginmodel = new LoginModel();

    private void HandleValidSubmit()
    {
        Console.WriteLine("OnValidSubmit");
    }
}
